{
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length",
        "120"
    ],
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.venv": true,
        "**/.vscode": true,
        "**/build": true,
        "**/dist": true,
        "**/.gitignore": false,
        "**/__pycache__": true,
        "**/*.egg-info": true,
    }
}